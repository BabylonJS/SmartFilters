{
    "name": "@babylonjs/smart-filters-editor",
    "private": true,
    "version": "0.0.0",
    "description": "The Smart Filters Editor tool is a web-based tool that allows you to create and edit Smart Filters for Babylon.js.",
    "keywords": [
        "video",
        "composition",
        "3D",
        "2D",
        "javascript",
        "html5",
        "webgl",
        "webgl2",
        "webgpu",
        "babylon"
    ],
    "license": "MIT",
    "scripts": {
        "build": "webpack --env=prod",
        "clean": "rimraf .temp && rimraf www/scripts",
        "start": "concurrently \"npx webpack-dev-server --open\" \"npm run watch:shaders -w @babylonjs/smart-filters-blocks\"",
        "start:dev": "npx webpack-dev-server",
        "analyze": "webpack --profile --json > www/scripts/stats.json && npx webpack-bundle-analyzer www/scripts/stats.json"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.1.0",
        "@fortawesome/free-solid-svg-icons": "^6.1.0",
        "@fortawesome/react-fontawesome": "^0.1.18",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.10",
        "css-loader": "^7.1.0",
        "file-loader": "^6.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sass": "^1.85.1",
        "sass-loader": "^16.0.5",
        "source-map-loader": "^3.0.0",
        "style-loader": "^3.3.0",
        "ts-loader": "^9.4.1",
        "url-loader": "^4.1.1",
        "webpack": "^5.94.0",
        "webpack-bundle-analyzer": "^4.7.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^5.2.1"
    }
}
