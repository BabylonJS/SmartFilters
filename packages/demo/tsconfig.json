{
    "extends": "../../tsconfig.common.json",

    "compilerOptions": {
        "rootDir": "../",
        "outDir": "./.temp",
        "composite": true,
        "resolveJsonModule": true
    },

    "include": [
        "./src/**/*.ts",
        "../core/**/*.ts",
        "../core/**/*.tsx",
        "../editor/**/*.ts",
        "../editor/**/*.tsx",
        "../blocks/**/*.ts",
        "./src/configuration/smartFilters/serialized/*.json"
    ],
    "exclude": ["**/node_modules", "**/.temp"]
}
