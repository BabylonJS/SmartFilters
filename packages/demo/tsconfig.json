{
    "extends": "../../tsconfig.common.json",

    "compilerOptions": {
        "rootDir": "../",
        "outDir": "./.temp",
        "composite": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },

    "include": [
        "../**/*.ts",
        "../**/*.tsx",
        "./src/configuration/smartFilters/serialized/*.json",
        "./www/version.json"
    ],
    "exclude": ["**/node_modules", "**/.temp"]
}
